<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Activities.BuyActivity">

    <include layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_20">

        <com.app.xdcpay.Views.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:text="@string/select_service"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/margin_14" />

        <com.app.xdcpay.Views.TextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvSimplex"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:background="@drawable/rounded_corner_5dp_light_grey_border"
            android:drawableLeft="@drawable/ic_simplex"
            android:drawableRight="@drawable/ic_next"
            android:padding="@dimen/margin_10" />

        <com.app.xdcpay.Views.TextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvFaucet"
            android:layout_margin="@dimen/margin_10"
            android:textColor="@color/colorBlack"
            android:visibility="gone"
            android:background="@drawable/rounded_corner_5dp_light_grey_border"
            android:drawableRight="@drawable/ic_next"
            android:text="@string/faucet"
            android:padding="@dimen/margin_10" />

        <com.app.xdcpay.Views.TextViewMedium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:visibility="gone"
            android:background="@drawable/rounded_corner_5dp_light_grey_border"
            android:drawableLeft="@drawable/ic_gate_io"
            android:drawableRight="@drawable/ic_next"
            android:padding="@dimen/margin_10" />
    </LinearLayout>

</LinearLayout>