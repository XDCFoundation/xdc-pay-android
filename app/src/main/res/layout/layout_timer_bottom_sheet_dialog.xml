<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_corner"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/margin_41"
        android:layout_height="@dimen/margin_4"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_21"
        android:background="@color/bottom_sheet" />

    <com.app.xdcpay.Views.TextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_18"
        android:gravity="center"
        android:text="@string/auto_timer"
        android:textColor="@color/colorBlackText"
        android:textSize="@dimen/margin_16" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTimeLocker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="54dp" />
</LinearLayout>