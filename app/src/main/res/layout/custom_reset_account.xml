<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/margin_7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/rounded_corner_5dp_light_grey1_border"
        android:backgroundTint="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_24"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_15"
                android:src="@drawable/ic_back"
                android:visibility="gone" />

            <com.app.xdcpay.Views.TextViewBold
                android:id="@+id/tv_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/reset_account"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/margin_20" />
        </RelativeLayout>

        <com.app.xdcpay.Views.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_24"
            android:layout_marginRight="@dimen/margin_20"
            android:text="@string/reset_account_text"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/margin_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_30"
            android:layout_marginBottom="@dimen/margin_5"
            android:gravity="right"
            android:orientation="horizontal">

            <com.app.xdcpay.Views.TextViewMedium
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:padding="@dimen/margin_15"
                android:text="@string/cancel"
                android:textAllCaps="true"
                android:textColor="@color/cancel_color"
                android:textSize="@dimen/margin_14" />

            <com.app.xdcpay.Views.TextViewMedium
                android:id="@+id/tv_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginRight="@dimen/margin_10"
                android:padding="@dimen/margin_15"
                android:text="@string/reset"
                android:textAllCaps="true"
                android:textColor="@color/cancel_color"
                android:textSize="@dimen/text_14" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

