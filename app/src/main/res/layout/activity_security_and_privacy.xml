<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Activities.SecurityPrivacy.SecurityAndPrivacyActivity">

    <include layout="@layout/layout_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.app.xdcpay.Views.TextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_16"
                    android:fontFamily="@font/inter_medium"
                    android:text="@string/reveal_seed_words"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/margin_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_16"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/reveal_seed_words_hint"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/margin_14" />

                <com.app.xdcpay.Views.TextViewBold
                    android:id="@+id/btn_revealSeedPhrase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_18"
                    android:layout_marginRight="@dimen/margin_16"
                    android:background="@drawable/rounded_corner_5dp_green_border"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="@string/reveal_seed_words"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_green"
                    android:textSize="@dimen/margin_16"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_30"
                    android:background="@color/colorLine" />

                <com.app.xdcpay.Views.TextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_18"
                    android:layout_marginRight="@dimen/margin_16"
                    android:text="@string/change_password"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/margin_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_16"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/change_password_hint"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/margin_14" />

                <com.app.xdcpay.Views.TextViewBold
                    android:id="@+id/btn_changePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_18"
                    android:layout_marginRight="@dimen/margin_16"
                    android:background="@drawable/rounded_corner_5dp_blue_border"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="@string/change_password"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/margin_16"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_30"
                    android:background="@color/colorLine" />

                <com.app.xdcpay.Views.TextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_18"
                    android:layout_marginRight="@dimen/margin_16"
                    android:text="@string/auto_locker_timer"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/margin_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_16"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/auto_lock_txt"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/margin_14" />

                <com.app.xdcpay.Views.EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_timer"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_18"
                    android:layout_marginRight="@dimen/margin_16"
                    android:background="@drawable/rounded_corner_5dp_light_grey_border"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:drawablePadding="@dimen/margin_12"
                    android:focusable="false"
                    android:padding="@dimen/margin_13"
                    android:singleLine="true"
                    android:text="@string/auto_lock_time"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/margin_14" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_30"
                    android:background="@color/colorLine" />

                <com.app.xdcpay.Views.TextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_18"
                    android:layout_marginRight="@dimen/margin_16"
                    android:text="@string/show_private_key"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/margin_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_12"
                    android:layout_marginRight="@dimen/margin_16"
                    android:fontFamily="@font/inter_regular"
                    android:text="@string/private_key_hint"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/margin_14" />

                <com.app.xdcpay.Views.TextViewBold
                    android:id="@+id/btn_showPrivateKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_18"
                    android:layout_marginRight="@dimen/margin_16"
                    android:background="@drawable/rounded_corner_5dp_blue_border"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:text="@string/show_private_key"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/margin_16"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_30"
                    android:background="@color/colorLine" />

                <com.app.xdcpay.Views.TextViewMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_18"
                    android:layout_marginRight="@dimen/margin_16"
                    android:text="@string/signin_biometric"
                    android:textColor="@color/colorBlue"
                    android:textSize="@dimen/margin_14" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:layout_marginTop="@dimen/margin_18"
                    android:layout_marginRight="@dimen/margin_16"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switch_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:theme="@style/BrandedSwitch"
                        app:switchPadding="8dp" />

                    <com.app.xdcpay.Views.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:id="@+id/tv_switch"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/text_on"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/margin_14" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>