<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Activities.SecurityPrivacy.ShowPrivateKeyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_20">

            <com.app.xdcpay.Views.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:text="@string/hint_private_key"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/margin_14" />

            <com.app.xdcpay.Views.TextView
                android:id="@+id/tvPrivateKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@drawable/rounded_corner_5dp_light_grey1_border"
                android:gravity="top"
                android:hint="@string/hint_private_key"
                android:inputType="textPassword|textMultiLine"
                android:lines="4"
                android:padding="@dimen/margin_10"
                android:textSize="@dimen/margin_14" />

            <com.app.xdcpay.Views.TextViewMedium
                android:id="@+id/tv_copyClip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_18"
                android:layout_marginTop="@dimen/margin_18"
                android:layout_marginRight="@dimen/margin_18"
                android:padding="2dp"
                android:text="@string/copy_to_clipboard"
                android:textColor="@color/colorBlue"
                android:textSize="@dimen/margin_12" />

            <com.app.xdcpay.Views.TextViewMedium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_18"
                android:layout_marginTop="@dimen/margin_32"
                android:layout_marginRight="@dimen/margin_18"
                android:background="@drawable/warning_bg"
                android:drawableStart="@drawable/ic_warning"
                android:drawablePadding="@dimen/margin_12"
                android:paddingHorizontal="@dimen/margin_12"
                android:paddingVertical="@dimen/margin_12"
                android:text="@string/key_warning"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/margin_12" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>