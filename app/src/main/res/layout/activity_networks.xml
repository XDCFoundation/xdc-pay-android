<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Activities.Networks.NetworksActivity">

    <include layout="@layout/layout_toolbar_add" />

    <LinearLayout
        android:id="@+id/linear_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_iv"
            android:layout_width="@dimen/margin_10"
            android:layout_height="@dimen/margin_10"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_6"
            android:src="@drawable/ic_green_dot"
            app:tint="@color/network_color" />

        <com.app.xdcpay.Views.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_14"
            android:layout_weight="1"
            android:text="@string/xdc_mainnet"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/margin_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_10"
            android:src="@drawable/ic_next" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linear"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/linear_network_Apothem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_iv1"
            android:layout_width="@dimen/margin_10"
            android:layout_height="@dimen/margin_10"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_6"
            android:src="@drawable/ic_green_dot"
            android:tint="@color/network_color1"/>

        <com.app.xdcpay.Views.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_14"
            android:layout_weight="1"
            android:text="@string/xdc_apothem_testnet"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/margin_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_10"
            android:src="@drawable/ic_next" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linear"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/colorLine" />

    <LinearLayout
        android:id="@+id/linear_network_localHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile_iv2"
            android:layout_width="@dimen/margin_10"
            android:layout_height="@dimen/margin_10"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_6"
            android:src="@drawable/ic_green_dot"
            android:tint="@color/network_color2"/>

        <com.app.xdcpay.Views.TextViewMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_14"
            android:layout_weight="1"
            android:text="@string/localhost_8545"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/margin_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_10"
            android:src="@drawable/ic_next" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/linear"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@color/colorLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_Networks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>